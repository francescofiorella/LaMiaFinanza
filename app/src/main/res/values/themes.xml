<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFinance" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorAccent">@color/accent</item>

        <!--Custom widgets theme. -->
        <item name="materialCalendarTheme">@style/ThemeOverlay.MyFinance.DatePicker</item>
        <item name="textInputStyle">@style/Widget.MyFinance.TextInputLayout.OutlinedBox</item>
    </style>

    <!--Dialog theme. -->
    <style name="ThemeOverlay.MyFinance.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundTint">@color/card_bg</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/TextAppearance.MyFinance.AlertDialog.Title
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.MyFinance.Body</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.MyFinance.AlertDialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MyFinance.AlertDialog.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MyFinance.AlertDialog.Button</item>
    </style>

    <!--Material Fields theme. -->
    <style name="Widget.MyFinance.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyFinance.TextInputLayout.OutlinedBox
        </item>
    </style>

    <!--Material DatePicker theme. -->
    <style name="ThemeOverlay.MyFinance.DatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MyFinance.DatePicker.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MyFinance.DatePicker.Button</item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.MyFinance.MediumComponent
        </item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorSurface">@color/card_bg</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <!-- SplashScreen theme. -->
    <style name="Theme.MyFinance.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/icon_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.MyFinance</item>
    </style>
</resources>