<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorAccent">@color/accent</item>

        <!--Custom widgets theme. -->
        <item name="materialCalendarTheme">@style/ThemeOverlay.MyFinance.DatePicker</item>
        <item name="textInputStyle">@style/Widget.MyFinance.TextInputLayout.OutlinedBox</item>
    </style>

    <!--Material DatePicker theme. -->
    <style name="ThemeOverlay.MyFinance.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MyFinance.DatePicker.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MyFinance.DatePicker.Button</item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.MyFinance.MediumComponent
        </item>
        <item name="backgroundTint">@color/accent</item>
        <item name="android:backgroundTint">@color/card_bg</item>
    </style>
</resources>