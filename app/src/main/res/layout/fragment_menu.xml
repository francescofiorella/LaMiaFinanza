<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.menu.MenuFragment">

    <data>

        <variable
            name="viewmodel"
            type="com.frafio.myfinance.ui.home.menu.MenuViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/menu_fragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_4"
            android:fontFamily="@font/nunito"
            android:textSize="21sp"
            android:padding="10dp"
            android:textColor="@color/primary_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/menu_divider"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/primary_text"
            app:layout_constraintTop_toBottomOf="@id/menu_fragmentTitle"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menu_logoutBtn"
            android:onClick="@{viewmodel::onLogoutButtonClick}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accent"
            android:fontFamily="@font/nunito_semibold"
            android:text="Log Out"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/field_corner_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu_divider" />

        <TextView
            android:id="@+id/menu_appVersion_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:layout_marginTop="10dp"
            android:text="@{viewmodel.versionName}"
            tools:text="MyFinance 1.0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_logoutBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
